{
  "version": 2,
  "builds": [
    {
      "src": "view/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/api.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/api.js"
    },
    {
      "src": "/(.*)",
      "dest": "/view/dist/index.html"
    }
  ]
}